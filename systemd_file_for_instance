[Unit]
Description=FastAPI application
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/Deployment-for-EC2-Instance-of-Client
Environment="PATH=/home/ubuntu/Deployment-for-EC2-Instance-of-Client/venv/bin"
ExecStart=/home/ubuntu/Deployment-for-EC2-Instance-of-Client/venv/bin/uvicorn fast_api:app --host 0.0.0.0 --port 8000

[Install]
WantedBy=multi-user.target
